#include <stdio.h>
#include <stdlib.h>
int count = 0, i;

struct node
{
    int data;
    struct node *next;
};

struct node *head = NULL;
struct node *temp = NULL;

void create()
{
    struct node *nn;
    nn = (struct node *)malloc(sizeof(struct node));
    printf("\n Enter data : ");
    scanf("%d", &nn->data);
    if (head == 0)
    {
        head = temp = nn;
        count++;
    }
    else
    {
        temp->next = nn;
        temp = nn;
        count++;
    }
}

void display()
{
    i = 0;
    temp = head;
    printf("\n Data stored is : \n");
    while (i < count)
    {
        printf("%d  ", temp->data);
        i++;
        temp = temp->next;
    }
}

void add()
{
    struct node *nn;
    nn = (struct node *)malloc(sizeof(struct node));
    int p;
    i = 1;
    printf("\n Enter the position to insert data : ");
    scanf("%d", &p);
    if (p > count)
    {
        printf("\n wrong position ");
    }
    else
    {
        temp = head;
        while (i < p - 1)
        {
            temp = temp->next;
        }
        printf("\n Enter data to insert : ");
        scanf("%d", &nn->data);
        nn->next = temp->next;
        temp->next = nn;
        count++;
    }
}

void delete ()
{
    struct node *Delete;
    int p;
    i = 1;
    printf("\n Enter the position to delete data : ");
    scanf("%d", &p);
    if (p > count)
    {
        printf("\n wrong position ");
    }
    else
    {
        temp = head;
        while (i < p - 1)
        {
            temp = temp->next;
        }
        Delete = temp->next;
        temp->next = Delete->next;
        free(Delete);
        count--;
    }
}

void main()
{
    int n, a = 0, choice;
    printf("\n Enter how many nodes you want to crete : ");
    scanf("%d", &n);
    while (a < n)
    {
        create();
        a++;
    }
    while (a != 0)
    {
        printf("\n 1.add \t 2.delete \t 3.display \t 4.end_program");
        printf("\n Enter your choice : ");
        scanf("%d", &choice);
        switch (choice)
        {
        case 1:
            add();
            break;

        case 2:
            delete ();
            break;

        case 3:
            display();
            break;

        case 4:
            a = 0;
            break;

        default:
            printf("\n Wrong choice!");
        }
    }
}
